@model ITWorkLogs.Models.WorkLogsViewModel

@Html.ValidationSummary(true)

@using (Ajax.BeginForm("AddWork", new AjaxOptions { UpdateTargetId = "listwork" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <div></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       <div class="form-group">
            @Html.LabelFor(model => model.newWorkLogs.Personnel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.newWorkLogs.Personnel, (SelectList)ViewBag.Name, "Select Personnel", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newWorkLogs.Personnel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.newWorkLogs.Department, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.newWorkLogs.Department, (SelectList)ViewBag.Branches, "Select Branch", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.newWorkLogs.Department, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.newWorkLogs.PersonConcern, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.newWorkLogs.PersonConcern, new { htmlAttributes = new { @class = "form-control", placeholder = "Person Concern" } })
                @Html.ValidationMessageFor(model => model.newWorkLogs.PersonConcern, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Concern", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.newWorkLogs.Concern, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.newWorkLogs.Concern, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Details", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.newWorkLogs.Details, new { htmlAttributes = new { @class = "form-control", placeholder = "Details" } })
                @Html.ValidationMessageFor(model => model.newWorkLogs.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Add task" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>

    <div class="col-md-12" id='listwork'>
        @{ Html.RenderPartial("partialworklogs", Model.worklogs); }
    </div>

}


