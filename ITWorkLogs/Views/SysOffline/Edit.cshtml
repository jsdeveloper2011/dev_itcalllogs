@model ITWorkLogs.Models.sysOfflines

@{
    ViewBag.Title = "Edit";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Edit task</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.sysOfflineId)
    @Html.HiddenFor(m => m.Branches)
    @Html.HiddenFor(m => m.personConcern)
    @Html.HiddenFor(m => m.Details)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.CreatedBy)

    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.DateConnected, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.DateConnected, new { @class = "form-control dateconn", placeholder = "Enter date connected here..." })
                    @Html.ValidationMessageFor(model => model.DateConnected, "", new { @class = "text-danger" })
                </div>
            </div> 
        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="/images/wait.gif" alt="wiat" />
            Wait..
        </span>

        <input class="btn btn-primary" type="submit" value="Save" />
        <button class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
}

<link href="~/Content/jquery-ui.css" rel="stylesheet" /> @*for datepicker*@
<script type="text/javascript">
    

    $(function () { // will trigger when the document is ready
        $('.dateconn').datepicker(
            {
                changeMonth: true,
                changeYear: true
            }); //Initialise any date pickers
    });

    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>




