<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title IT- WorkLogs</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                     @Html.ActionLink("IT CALL LOGS", "Index", "WorkLogs", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Tasks <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("My Tasks/Add Task", "Index", "worklogs")</li>
                                <li>@Html.ActionLink("All Tasks", "othertasks", "worklogs")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("EBT Synch logs", "Index", "syncs")</li>
                        <li>@Html.ActionLink("NEW - List of  Manual", "Index", "sysoffline")</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">User Management <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Users", "Index", "Account")</li>
                                <li>@Html.ActionLink("Branches/Department", "Index", "branches")</li>
                                @if (User.IsInRole("SuperAdmin"))
                                {
                                    <li>@Html.ActionLink("Roles", "Index", "Role")</li>
                                }
                            </ul>
                        </li>

                        <li><a href="http://192.168.0.13:8181/supplies.php" target="_blank">EBT(system was change)</a></li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IT Department</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>

